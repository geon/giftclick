block vars
doctype html5
head
	meta(http-equiv='content-type', content='text/html;charset=utf-8')
	title GiftClick.se
	meta(name='keywords', content='present, gratis, click')
	meta(name='description', content='Vi lottar ut presenter. Klicka på de presenter du vill ha. Titta in ofta, presenterna försvinner snabbt!')
	meta(name='viewport', content='width = device-width, initial-scale = 1.0')
	// Site wide Facebook sharing metadata.
	meta(property='og:fb:app_id'   content=fbAppId)
	meta(property='og:site_name'   content='GiftClick.se')
	meta(property='og:locale'      content='sv_SE')
	block meta

	link(rel='stylesheet', href='/css/style.css')
	block css
body
	//- FB expects this div to be here.
	#fb-root

	//- .header.logged-in
	.header
		.new-user
			if !topLevel
				a(href='/').back: span.icon.fa-chevron-circle-left
			.text
				h1 Är du ny här?
				p Vi lottar ut presenter. Logga in med ditt Facebook-konto så missar du inga vinster.
			button.log-in
				span.icon.fa-facebook-official
				span.caption Logga in med Facebook

		.existing-user
			if !topLevel
				a(href='/').back: span.icon.fa-chevron-circle-left
			.text
				h1
					| Hej, 
					span.userFirstName ...
					| !
				p
					| Du har 
					span.userNumClicksLeft
					|  klick kvar idag.
			button.log-out Logga ut

	block content

	.footer
		a(href='/integritetspolicy.html') integritetspolicy
		|  
		a(href='mailto:info@giftclick.se') kontakt

	script.
		var fbAppId = '!{fbAppId}';
	script(src='/js/vendor/jquery-2.1.3.min.js')
	script(src='/js/vendor/underscore-1.8.3.min.js')
	script(src='/js/vendor/backbone-1.2.1.min.js')
	script(src='/js/Header.js')
	script(src='/js/User.js')
	script(src='/js/App.js')
	script(src='/js/main.js')
	block js

	//- Analytics
	script.
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
